<%= form_for(:post, url: search_user_path(@user), method: :get, remote: true) do |f| %>
   <%= f.text_field :word, class: "search-form", placeholder: "フリーワード検索しよう！" %>
   <% unless @published == true %>
      <%= f.hidden_field :published, value: "0" %>
   <% end %>
   <%= button_tag sanitize('<i class="fa fa-search"></i>'), type: "submit",
      class: "search-btn" %>
<% end %>
